<div class="block-form-wrapper">
  <h1>Reset your password</h1>

  <%= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f| %>
    <%= f.input :reset_password_token, as: :hidden %>

    <%= f.input :password, label: "New password", input_html: { autocomplete: "new-password", autofocus: true } %>
    <%= f.input :password_confirmation, label: "Confirm new password", input_html: { autocomplete: "new-password" } %>

    <%= f.button :submit, "Save password", class: "button--primary button--fullwidth" %>
  <% end %>
</div>
